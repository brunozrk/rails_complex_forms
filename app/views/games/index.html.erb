<table class="table">
<caption>Games <%= link_to 'new', new_game_path %></caption>
  <thead>
    <tr>
      <th>Name</th>
      <th>Players</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td>
          <% game.scores.each do |score|%>
            <%= score.player.name %> - <%= score.value %> <br>
          <% end %>
        </td>
        <td>
          <%= link_to 'edit', edit_game_path(game) %>
          <%= link_to 'remove', game_path(game), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
